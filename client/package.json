{
  "name": "lms-client",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:prod": "ts-node ./src/app.ts",
    "start:dev": "npx nodemon ./src/app.ts",
    "start:pm2": "pm2 start --name LTV-LMS-Client --log app-log.txt --time npm -- run -- start:prod",
    "build:all": "npm run clean && npm run build:sass && npm run build:webpack && npm run build:ts && npm run copy:files",
    "build:ts": "tsc",
    "build:sass": "npx sass ./src/assets/scss:./src/assets/css --load-path node_modules",
    "build:webpack": "npx webpack --mode production",
    "watch:sass": "npx sass --watch ./src/assets/scss:./src/assets/css --load-path=node_modules",
    "watch:webpack": "npx webpack --mode development --watch",
    "clean": "npx rimraf build/",
    "copy:files": "cp -r ./src/assets ./build && cp -r ./src/views ./build",
    "copy:assets": "npx rimraf build/assets build/views && npm run copy:files"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@material/button": "^14.0.0",
    "@material/textfield": "^14.0.0",
    "@material/theme": "^14.0.0",
    "@material/web": "^1.0.0",
    "axios": "^1.2.5",
    "config": "^3.3.9",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "glob": "^8.1.0",
    "hbs": "^4.2.0",
    "mongoose": "^6.9.0",
    "nodemon": "^2.0.20",
    "pm2": "^5.2.2",
    "rimraf": "^5.0.5",
    "sass": "^1.57.1",
    "sass-loader": "^13.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@types/config": "^3.3.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.15",
    "@types/hbs": "^4.0.1",
    "babel-loader": "^9.1.2",
    "babel-plugin-module-resolver": "^5.0.0",
    "compression-webpack-plugin": "^10.0.0",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.13.1",
    "yarn": "^1.22.19"
  }
}
